        "slim/psr7": "^1.5",
        "respect/validation": "^2.2",
        "nyholm/psr7": "^1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^12",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
